# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crypto_gateway
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-encryption-key-32-characters
WEBHOOK_SECRET=your-webhook-secret-change-this

# URLs
WEBHOOK_BASE_URL=https://your-domain.com
FRONTEND_URL=https://your-frontend.com
BASE_URL=http://localhost:3000

# Crossmint Configuration (Card-to-Crypto Gateway)
CROSSMINT_CLIENT_ID=your_crossmint_client_id
CROSSMINT_API_KEY=your_crossmint_api_key
CROSSMINT_ENVIRONMENT=staging
# CROSSMINT_ENVIRONMENT=production (for production)

# PUBLIC API ENDPOINTS (No credentials required)
# All APIs used are public and require zero signup

# Bitcoin Public RPC Endpoints
BITCOIN_RPC_ENDPOINTS=https://bitcoin-rpc.publicnode.com,https://blockstream.info/api

# Ethereum Public RPC Endpoints  
ETHEREUM_RPC_ENDPOINTS=https://ethereum-rpc.publicnode.com,https://cloudflare-eth.com

# Polygon Public RPC Endpoints
POLYGON_RPC_ENDPOINTS=https://polygon-rpc.publicnode.com,https://rpc-mainnet.maticvigil.com

# Price Data APIs (No signup required)
PRICE_API_ENDPOINTS=https://api.coingecko.com/api/v3,https://min-api.cryptocompare.com/data

# DEX Subgraph APIs (No signup required)
UNISWAP_SUBGRAPH=https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v3
PANCAKESWAP_SUBGRAPH=https://api.thegraph.com/subgraphs/name/pancakeswap/exchange

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Settlement Configuration
SETTLEMENT_WALLET_PRIVATE_KEY=
SETTLEMENT_MIN_CONFIRMATIONS_BTC=3
SETTLEMENT_MIN_CONFIRMATIONS_ETH=12
SETTLEMENT_BATCH_INTERVAL=300000